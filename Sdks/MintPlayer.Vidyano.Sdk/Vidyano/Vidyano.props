<Project>

	<Target Name="ShowPathSettings" BeforeTargets="Build">
		<Message Text="Using Windows path settings" Condition="'$(OS)' != '' and $(OS.StartsWith('Windows'))" Importance="high" />
		<Message Text="Using Linux path settings" Condition="!('$(OS)' != '' and $(OS.StartsWith('Windows')))" Importance="high" />
	</Target>

	<PropertyGroup>
		<CommonTargetFramework>net9.0</CommonTargetFramework>
		<CommonLangVersion>13</CommonLangVersion>
		<ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
		<CentralPackageTransitivePinningEnabled>true</CentralPackageTransitivePinningEnabled>
	</PropertyGroup>

	<PropertyGroup>
		<VidyanoRavenDBVersion Condition="'$(VidyanoRavenDBVersion)' == ''">6.0.20250804.6019</VidyanoRavenDBVersion>
		<VidyanoSourceGeneratorsVersion Condition="'$(VidyanoSourceGeneratorsVersion)' == ''">2.22.1</VidyanoSourceGeneratorsVersion>
		<MeziantouAnalyzerVersion Condition="'$(MeziantouAnalyzerVersion)' == ''">2.0.210</MeziantouAnalyzerVersion>
		<MinVerVersion Condition="'$(MinVerVersion)' == ''">6.0.0</MinVerVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Vidyano.RavenDB" />
		<PackageReference Include="Vidyano.SourceGenerators" />
		<GlobalPackageReference Include="Meziantou.Analyzer" Version="$(MeziantouAnalyzerVersion)" PrivateAssets="all" />
		<GlobalPackageReference Include="MinVer" Version="$(MinVerVersion)" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<PackageVersion Include="Vidyano.RavenDB" Version="$(VidyanoRavenDBVersion)" />
		<PackageVersion Include="Vidyano.SourceGenerators" Version="$(VidyanoSourceGeneratorsVersion)" />
	</ItemGroup>
</Project>
