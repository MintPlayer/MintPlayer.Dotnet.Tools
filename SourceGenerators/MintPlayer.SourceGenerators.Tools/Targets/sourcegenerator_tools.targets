<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!--
	This file does the following:
		- Only runs when the package is installed as a PackageReference, not in this solution
		- Indicates that the source generator package depends on the MintPlayer.SourceGenerators.Tools package
		- Ensures that the GeneratePathProperty is set on the PackageReference to this package
	-->

	<PropertyGroup>
		<GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPathsCommon</GetTargetPathDependsOn>
	</PropertyGroup>

	<PropertyGroup Condition="'$(PkgMicrosoft_Extensions_DependencyInjection_Abstractions)' != ''">
		<GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPathsDependencyInjection</GetTargetPathDependsOn>
	</PropertyGroup>

	<Target Name="GetDependencyTargetPathsCommon">
		<!-- Include dependency DLLs and put them in the correct package path -->
		<ItemGroup>
			<TargetPathWithTargetPlatformMoniker Include="$(PkgMintPlayer_SourceGenerators_Tools)\lib\netstandard2.0\MintPlayer.SourceGenerators.Tools.dll" IncludeRuntimeDependency="false" />
		</ItemGroup>
	</Target>

	<Target Name="GetDependencyTargetPathsDependencyInjection" Condition="'$(PkgMicrosoft_Extensions_DependencyInjection_Abstractions)' != ''">
		<ItemGroup>
			<TargetPathWithTargetPlatformMoniker Include="$(PKGMicrosoft_Extensions_DependencyInjection_Abstractions)\lib\netstandard2.0\Microsoft.Extensions.DependencyInjection.Abstractions.dll" IncludeRuntimeDependency="false" />
		</ItemGroup>
	</Target>

	<Target Name="GeneratorTools_CheckGeneratePathProperty" BeforeTargets="CoreCompile" Condition="'$(DesignTimeBuild)' != 'true'">
		<Error Condition="'$(PkgMintPlayer_SourceGenerators_Tools)' == ''"
			   Text="Please add GeneratePathProperty=&quot;true&quot; on the MintPlayer.SourceGenerators.Tools PackageReference." />
	</Target>

	<Target Name="MintPlayer_SourceGenerators_Tools_TargetsLoaded" BeforeTargets="PrepareForBuild">
		<Message Text="SourceGenerators.Tools targets loaded" Importance="High" />
	</Target>
</Project>
