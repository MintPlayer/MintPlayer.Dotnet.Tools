<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPathsMintPlayerSourceGenerators</GetTargetPathDependsOn>
	</PropertyGroup>

	<Target Name="GetDependencyTargetPathsMintPlayerSourceGenerators">
		<ItemGroup>
			<TargetPathWithTargetPlatformMoniker Include="$(MSBuildThisFileDirectory)\..\MintPlayer.SourceGenerators.Attributes\bin\$(Configuration)\netstandard2.0\MintPlayer.SourceGenerators.Attributes.dll" IncludeRuntimeDependency="true" />
			<TargetPathWithTargetPlatformMoniker Include="$(PkgMicrosoft_Extensions_DependencyInjection_Abstractions)\lib\netstandard2.0\Microsoft.Extensions.DependencyInjection.Abstractions.dll" IncludeRuntimeDependency="false" />
		</ItemGroup>
	</Target>

	<PropertyGroup>
		<Version>10.6.4</Version>
		<Authors>Pieterjan De Clippel</Authors>
		<Company>MintPlayer</Company>
		<Description>This package contains several source generators</Description>
		<PackageProjectUrl>https://github.com/MintPlayer/MintPlayer.Dotnet.Tools/SourceGenerators/MintPlayer.SourceGenerators</PackageProjectUrl>
		<RepositoryUrl>https://github.com/MintPlayer/MintPlayer.Dotnet.Tools</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageId>MintPlayer.SourceGenerators</PackageId>
		<PackageTags>SourceGenerators</PackageTags>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<!--<DebugType>embedded</DebugType>-->
		<IncludeSymbols>false</IncludeSymbols>
		<!--<SymbolPackageFormat>snupkg</SymbolPackageFormat>-->
		<!--<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>-->
	</PropertyGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Release' ">
        <!-- Dependency DLLs -->
        <None Include="..\MintPlayer.SourceGenerators.Attributes\bin\$(Configuration)\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="true" />
        <None Include="$(PkgMicrosoft_Extensions_DependencyInjection_Abstractions)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="true" />
    </ItemGroup>

    <ItemGroup>
        <None Include="build\MintPlayer.SourceGenerators.props" Pack="true" PackagePath="build\MintPlayer.SourceGenerators.props" />
        <None Include="build\MintPlayer.SourceGenerators.targets" Pack="true" PackagePath="build\MintPlayer.SourceGenerators.targets" />
    </ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\MintPlayer.SourceGenerators.Attributes\MintPlayer.SourceGenerators.Attributes.csproj" />
	</ItemGroup>

	<ItemGroup>
		<!-- Needed at generator initialization to resolve ServiceLifetime/IServiceCollection -->
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.0" PrivateAssets="all" GeneratePathProperty="true" />
	</ItemGroup>

	<Import Project="..\..\eng\sourcegenerator.targets" />
	<Import Project="..\..\eng\newtonsoftjson.targets" />
	<Import Project="..\..\eng\valuecomparergenerator.targets" />
</Project>
