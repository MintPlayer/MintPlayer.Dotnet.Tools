<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <MintPlayerSourceGeneratorsAttributeAssembly Condition="'$(MintPlayerSourceGeneratorsAttributeAssembly)' == '' and Exists('$(MSBuildThisFileDirectory)..\analyzers\dotnet\cs\MintPlayer.SourceGenerators.Attributes.dll')">$(MSBuildThisFileDirectory)..\analyzers\dotnet\cs\MintPlayer.SourceGenerators.Attributes.dll</MintPlayerSourceGeneratorsAttributeAssembly>
    </PropertyGroup>

    <PropertyGroup Condition="'$(MintPlayerSourceGeneratorsAttributeAssembly)' != ''">
        <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPathsMintPlayerSourceGenerators</GetTargetPathDependsOn>
    </PropertyGroup>

    <Target Name="GetDependencyTargetPathsMintPlayerSourceGenerators" Condition="'$(MintPlayerSourceGeneratorsAttributeAssembly)' != ''">
        <ItemGroup>
            <TargetPathWithTargetPlatformMoniker Include="$(MintPlayerSourceGeneratorsAttributeAssembly)" IncludeRuntimeDependency="true" />
        </ItemGroup>
    </Target>

</Project>
